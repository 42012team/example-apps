[Unit]
Description=MyApp
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker kill busybox-example
ExecStartPre=-/usr/bin/docker rm busybox-example
ExecStartPre=/usr/bin/docker pull busybox
ExecStart=/usr/bin/docker run --name busybox-example busybox /bin/sh -c "while true; do echo Hello World; sleep 5; done"

[Install]
WantedBy=multi-user.target
